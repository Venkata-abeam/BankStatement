    "mbt": "^1.2.29",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-bankstatement": "cds watch --open bankstatement/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy bankstatement --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "cds": {
    "requires": {
      "[production]": {
        "auth": "xsuaa"
      },
      "connectivity": true,
      "destinations": true,
      "html5-runtime": true,
      "server": {
        "body_parser": {
          "limit": "20000mb"
        }
      },
      "query": {
        "limit": {
          "default": 1500000,
          "max": 1500000
        }
      },
      "YY1_BANKSTATEMENTAPI_CDS_0001": {
        "kind": "odata-v2",
        "model": "srv/external/YY1_BANKSTATEMENTAPI_CDS_0001",
        "[hybrid]": {
          "credentials": {
            "destination": "S4HANABASICAUTH",
            "path": "/sap/opu/odata/sap/YY1_BANKSTATEMENTAPI_CDS"
          },
          "destinationOptions": {
            "selectionStrategy": "alwaysSubscriber",
            "useCache": true
          }
        },
        "[production]": {
          "credentials": {
            "destination": "S4HANABASICAUTH",
            "path": "/sap/opu/odata/sap/YY1_BANKSTATEMENTAPI_CDS"
